//配置文件修改参考(可能不全面，应该还可以看懂的)：
//https://github.com/littlegao233/CQ-ConnectTo-BDX/blob/master/Guide.md
//--------------------------------
//千万别拿个记事本的截图来问我配置文件怎么改!!!!!!
//墙裂推荐用Visual Studio Code来编辑这个配置文件，自带json着色查错格式化之类的功能
//https://code.visualstudio.com/
//--------------------------------
{
  "configVersion": 1.0,
  "Servers": [
    {
      "Address": "ws://localhost:29132/mc",
      "Passwd": "passwd",
      "Tag": "测试服务器1",
      "Actions": [
        {
          "Type": "DoActions",
          "Filter": {
            "Path": [ "operate" ], //收到的json逐层目录取自{"operate":"onmsg","target":"WangYneos","text":"HelloWorld"}
            "Operator": "==", //比较符github有详讲
            "Value": "onmsg" //值
          },
          "Parameters": {
            "Actions": [
              {
                "Type": "var",
                "Parameters": {
                  "Name": "PlayerName",
                  "Path": [ "target" ]
                }
              },
              {
                "Type": "var",
                "Parameters": {
                  "Name": "Message", //变量名称
                  "Path": [ "text" ]
                  //层级目录，取自{"operate":"onmsg","target":"WangYneos","text":"HelloWorld"}
                }
              },
              {
                "Type": "var",
                "Parameters": {
                  "Name": "ServerName",
                  "ServerConfig": [ "Tag" ]
                }
              },
              {
                "Type": "ToUnicode",
                "Parameters": {
                  "CreateVariant": "ReturnMessage",
                  "Text": "§e<§6%PlayerName%§e>§b%Message%"
                }
              },
              {
                "Type": "log",
                "Parameters": {
                  "Debug": "[%ServerName%]玩家%PlayerName%发送了消息:%Message%"
                }
              },
              {
                "Type": "other",
                "Parameters": {
                  "cmd": "tellraw @a {\"rawtext\":[{\"text\":\"§a【%ServerName%】%ReturnMessage%\"}]}"
                }
              },
              {
                "Type": "GroupMessage",
                "Parameters": {
                  "GroupID": 386475891,
                  "Message": "[%ServerName%:Chat]%PlayerName%>%Message%"
                }
              }
            ]
          }
        },
        {
          "Type": "DoActions",
          "Filter": {
            "Path": [ "operate" ], //收到的json逐层目录取自{"operate":"onjoin","target":"WangYneos","text":"Joined server"}
            "Operator": "==", //比较符github有详讲
            "Value": "onjoin" //值
          },
          "Parameters": {
            "Actions": [
              {
                "Type": "var",
                "Parameters": {
                  "Name": "PlayerName",
                  "Path": [ "target" ]
                }
              },
              {
                "Type": "var",
                "Parameters": {
                  "Name": "ServerName",
                  "ServerConfig": [ "Tag" ]
                }
              },
              {
                "Type": "log",
                "Parameters": {
                  "Debug": "[%ServerName%]玩家%PlayerName%加入了服务器"
                }
              },
              {
                "Type": "sender",
                "Parameters": {
                  "cmd": "say §e欢迎%PlayerName%§a加入%ServerName%！"
                }
              },
              {
                "Type": "other",
                "Parameters": {
                  "cmd": "say %PlayerName%加入了%ServerName%"
                }
              },
              {
                "Type": "GroupMessage",
                "Parameters": {
                  "GroupID": 386475891,
                  "Message": "[%ServerName%:Join]%PlayerName%加入了服务器"
                }
              }
            ]
          }
        },
        {
          "Type": "DoActions",
          "Filter": {
            "Path": [ "operate" ], //收到的json逐层目录取自{"operate":"onjoin","target":"WangYneos","text":"Joined server"}
            "Operator": "==", //比较符github有详讲
            "Value": "onleft" //值
          },
          "Parameters": {
            "Actions": [
              {
                "Type": "var",
                "Parameters": {
                  "Name": "PlayerName",
                  "Path": [ "target" ]
                }
              },
              {
                "Type": "var",
                "Parameters": {
                  "Name": "ServerName",
                  "ServerConfig": [ "Tag" ]
                }
              },
              {
                "Type": "log",
                "Parameters": {
                  "Debug": "[%ServerName%]玩家%PlayerName%退出了服务器"
                }
              },
              {
                "Type": "sender",
                "Parameters": {
                  "cmd": "say §e真可惜%PlayerName%§a离开了%ServerName%！"
                }
              },
              {
                "Type": "other",
                "Parameters": {
                  "cmd": "say %PlayerName%离开了%ServerName%"
                }
              },
              {
                "Type": "GroupMessage",
                "Parameters": {
                  "GroupID": 386475891,
                  "Message": "[%ServerName%:Left]%PlayerName%离开了服务器"
                }
              }
            ]
          }
        },
        {
          "Type": "DoActions",
          "Filter": {
            "Path": [ "operate" ], //收到的json逐层目录取自{"operate":"onjoin","target":"WangYneos","text":"Joined server"}
            "Operator": "==", //比较符github有详讲
            "Value": "oncmd" //值
          },
          "Parameters": {
            "Actions": [
              {
                "Type": "DoActions",
                "Filter": {
                  "Path": [ "text" ], //收到的json逐层目录取自{"operate":"oncmd","target":"gxh2004","text":"list"}
                  "Operator": "==",
                  "Value": "list"
                },
                "Parameters": {
                  "Actions": [
                    {
                      "Type": "var",
                      "Parameters": {
                        "Name": "List_PlayerName",
                        "Path": [ "target" ]
                      }
                    },
                    {
                      "Type": "var",
                      "Parameters": {
                        "Name": "List_ServerName",
                        "ServerConfig": [ "Tag" ]
                      }
                    },
                    {
                      "Type": "all",
                      "Parameters": {
                        "cmd": "list",
                        "CallbackActions": [
                          {
                            "Type": "var",
                            "Parameters": {
                              "Name": "List_ResultText",
                              "Path": [ "text" ]
                            }
                          },
                          {
                            "Type": "var",
                            "Parameters": {
                              "Name": "List_ResultServer",
                              "ServerConfig": [ "Tag" ]
                            }
                          },
                          {
                            "Type": "RegexReplace",
                            "Parameters": {
                              "TargetVariant": "List_ResultText", //操作的变量，需要提前在"Variants"定义
                              "Pattern": "\n", //正则表达式匹配
                              "Replacement": "§b" //替换掉的字符串
                            }
                          },
                          {
                            "Type": "ToUnicode",
                            "Parameters": {
                              "CreateVariant": "List_ReturnMessage",
                              "Text": "§e[§6%List_ResultServer%§a在线玩家§e]§7%List_ResultText%"
                            }
                          },
                          {
                            "Type": "servers",
                            "Parameters": {
                              "Filter": {
                                "ServerConfig": [ "Tag" ], //每个server对应配置文件层级目录，取自当前server的配置文件筛选，可以自定义任何标签{ "Address": "ws://localhost:8880/mc", "Passwd": "passwd","Tag": "测试服务器1","Triggers"。。。}
                                "Operator": "==",
                                "Value": "%List_ServerName%"
                              },
                              "cmd": "tellraw \"%List_PlayerName%\" {\"rawtext\":[{\"text\":\"%List_ReturnMessage%\"}]}"
                            }
                          }
                        ]
                      }
                    }
                  ]
                }
              }
            ]
          }
        }
      ]
    }
  ],
  "CheckConnectionTime": 60, //检查连接时长，如果服务器掉线了会在检查后自动重连，单位:秒
  "Groups": [
    {
      "ID": 386475891,
      //START--------------
      //快捷转发消息发送到服务器
      //为方便使用没有太多设置(虽然自定义格式已经很多了)
      //如果感觉快捷转发方式不满意也可以"SendToServer": false后在下面的下面用触发器自定义转发(相对麻烦,但是可以实现更多自定义)
      "SendToServer": true,
      "SendToServerRegex": "^(?!/)(.+|\\s+)+",
      //正则筛选，符合条件会转发匹配到的内容
      //---------Examples---------
      //  群聊消息>无条件转发，可以这么填（或者把这行删了）
      //    "SendToServerRegex": "(.*|\\s*)*",
      //---------
      //  群聊消息>不转发以"/"开头的消息，可以这么填(使用了"零宽度负预测先行断言(?!exp)")
      //    "SendToServerRegex": "^(?!/)(.+|\\s+)+",
      //---------
      //  群聊消息>指定以"+"开头的消息，并转发+后面的内容，可以这么填(使用了"零宽度正回顾后发断言(?<=exp)")
      //    "SendToServerRegex": "(?<=^\+)(.+|\\s+)+",
      //---------
      //推荐正则教程(如果你不会改):https://deerchao.cn/tutorials/regex/regex.htm
      //---------
      "SendToServerFormat": {
        //[CQ:xx]自定义转换格式,注意:{n}是参数变量，不是每个都有的
        "CQAt": "§r§l§6@§r§6{0}§a",
        "CQImage": "§r§l§d[图骗]§r§a",
        "CQEmoji": "§r§l§d[emoji]§r§a",
        "CQFace": "§r§l§c[表情]§r§a",
        "CQBface": "§r§l§d[大表情:§r§o§7{0}§r§l§d]§r§a",
        //消息格式
        "Main": "§b【群聊消息】§e<{0}>§a{1}"
      },
      //END--------------
      "Actions": [
        {
          "Type": "var",
          "Parameters": {
            "Name": "Message",
            "Path": [
              "Message"
            ]
          }
        },
        {
          "Type": "RegexGet", //操作类型
          "Parameters": {
            "TargetVariant": "Message", //操作的变量，需要提前在"Variants"定义
            "CreateVariant": "CMDStr", //创建变量储存操作结果
            "Pattern": "^/(cmd|执行命令)\\s*(测试服务器1|测试服务器2)?\\s*/?(?<cmdStrGet>.*)", //正则表达式匹配 基于C#的高端正不懂勿用
            "GroupName": "cmdStrGet" //筛选组名，需要上方 Pattern有定义，否则返回空
          }
        },
        {
          "Type": "DoActions",
          "Filter": {
            "Variant": "CMDStr",
            "Operator": "!=",
            "Value": ""
          },
          "Parameters": {
            "Actions": [
              {
                "Type": "var",
                "Parameters": {
                  "Name": "MemberType",
                  "Path": [ "MemberInfo", "MemberType" ]
                  //群成员类型
                  //Creator:群主
                  //Manage:管理员
                  //Member:成员
                  //----------
                  //获取消息层级目录示例
                  //{
                  //  "Message": "23333",
                  //  "FromQQ": 441870948,
                  //  "FromQQNick": "g???x???h???",
                  //  "FromGroup": 386475891,
                  //  "IsFromAnonymous": false,
                  //  "Id": 2,
                  //  "MemberInfo": {
                  //    "Card": "gxh2004",
                  //    "Sex": 0,
                  //    "Age": 16,
                  //    "Area": "杭州",
                  //    "JoinGroupDateTime": "2017-05-13T22:38:10+08:00",
                  //    "LastSpeakDateTime": "2020-04-07T14:00:43+08:00",
                  //    "Level": "吐槽",
                  //    "MemberType": "Creator",
                  //    "ExclusiveTitle": "",
                  //    "ExclusiveTitleExpirationTime": "1970-01-01T08:00:00+08:00"
                  //  },
                  //  "GroupInfo": {
                  //    "Name": "机器人测试",
                  //    "CurrentMemberCount": 7,
                  //    "MaxMemberCount": 200
                  //  }
                  //}              //}
                }
              },
              {
                "Type": "RegexGet",
                "Parameters": {
                  "TargetVariant": "Message", //操作的变量，需要提前在"Variants"定义
                  "CreateVariant": "SelectedServer", //创建变量储存操作结果
                  "Pattern": "^/(cmd|执行命令)\\s*(?<Server>测试服务器1|测试服务器2)", //正则表达式匹配 基于C#的高端正不懂勿用
                  "GroupName": "Server" //筛选组名，需要上方 Pattern有定义，否则返回空
                }
              },
              {
                "Type": "DoActions",
                "Filter": {
                  "any_of": [ //任一满足返回true
                    {
                      "Variant": "MemberType",
                      "Operator": "==",
                      "Value": "Creator" //判断是群主
                    },
                    {
                      "Variant": "MemberType",
                      "Operator": "==",
                      "Value": "Manage" //判断是管理员
                    } /*,
                                        {
                                            "Path": [
                                                "FromQQ"
                                            ],
                                            "Operator": "==",
                                            "Value": "xxxxx"//通过QQ号判断权限
                                        }*/
                  ]
                },
                "Parameters": {
                  "Actions": [
                    {
                      "Type": "var",
                      "Parameters": {
                        "Name": "GroupID",
                        "Path": [ "FromGroup" ]
                      }
                    },
                    {
                      "Type": "servers",
                      "Parameters": {
                        "cmd": "%CMDStr%",
                        "Filter": {
                          "any_of": [
                            {
                              "Variant": "SelectedServer",
                              "Operator": "==",
                              "Value": ""
                            },
                            {
                              "ServerConfig": [ "Tag" ], //每个server对应配置文件层级目录，取自当前server的配置文件筛选，可以自定义任何标签{ "Address": "ws://localhost:8880/mc", "Passwd": "passwd","Tag": "测试服务器1","Triggers"。。。}
                              "Operator": "==",
                              "Value": "%SelectedServer%"
                            }
                          ]
                        },
                        "CallbackActions": [
                          {
                            "Type": "var",
                            "Parameters": {
                              "Name": "result",
                              "Path": [ "text" ]
                            }
                          },
                          {
                            "Type": "var",
                            "Parameters": {
                              "Name": "ServerName",
                              "ServerConfig": [ "Tag" ]
                            }
                          },
                          {
                            "Type": "GroupMessage",
                            "Parameters": {
                              "GroupID": "%GroupID%",
                              "Message": "[%ServerName%]命令\"%CMDStr%\"执行成功\n>%result%"
                            }
                          }
                        ]
                      }
                    },
                    {
                      "Type": "log",
                      "Parameters": {
                        "Info": "%SelectedServer%执行命令%CMDStr%"
                      }
                    }
                  ],
                  "MismatchedActions": [
                    {
                      "Type": "ReturnGroupMessageAtFrom",
                      "Parameters": {
                        "Message": "你莫得权限无法执行%CMDStr%"
                      }
                    }
                  ]
                }
              }
            ]
          }
        },
        {
          "Type": "RegexGet",
          "Parameters": {
            "TargetVariant": "Message", //操作的变量，需要提前在"Variants"定义
            "CreateVariant": "QueryAction", //创建变量储存操作结果
            "Pattern": "^/(?<QueryAction>query|查询)", //正则表达式匹配 基于C#的高端正不懂勿用
            "GroupName": "QueryAction" //筛选组名，需要上方 Pattern有定义，否则返回空
          }
        },
        {
          "Type": "DoActions",
          "Filter": {
            "Variant": "QueryAction",
            "Operator": "!=",
            "Value": ""
          },
          "Parameters": {
            "Actions": [
              {
                "Type": "RegexGet",
                "Parameters": {
                  "TargetVariant": "Message", //操作的变量，需要提前在"Variants"定义
                  "CreateVariant": "QueryServer", //创建变量储存操作结果
                  "Pattern": "^/(query|查询)\\s*(?<Server>测试服务器1|测试服务器2)", //正则表达式匹配 基于C#的高端正不懂勿用
                  "GroupName": "Server" //筛选组名，需要上方 Pattern有定义，否则返回空
                }
              },
              {
                "Type": "DoActions",
                "Parameters": {
                  "Actions": [
                    {
                      "Type": "var",
                      "Parameters": {
                        "Name": "GroupID",
                        "Path": [ "FromGroup" ]
                      }
                    },
                    {
                      "Type": "servers",
                      "Parameters": {
                        "cmd": "list",
                        "Filter": {
                          "any_of": [
                            {
                              "Variant": "QueryServer",
                              "Operator": "==",
                              "Value": ""
                            },
                            {
                              "ServerConfig": [ "Tag" ], //每个server对应配置文件层级目录，取自当前server的配置文件筛选，可以自定义任何标签{ "Address": "ws://localhost:8880/mc", "Passwd": "passwd","Tag": "测试服务器1","Triggers"。。。}
                              "Operator": "==",
                              "Value": "%QueryServer%"
                            }
                          ]
                        },
                        "CallbackActions": [
                          {
                            "Type": "var",
                            "Parameters": {
                              "Name": "QueryResult",
                              "Path": [ "text" ]
                            }
                          },
                          {
                            "Type": "var",
                            "Parameters": {
                              "Name": "ServerName",
                              "ServerConfig": [ "Tag" ]
                            }
                          },
                          {
                            "Type": "GroupMessage",
                            "Parameters": {
                              "GroupID": "%GroupID%",
                              "Message": "[%ServerName%]查询成功\n%QueryResult%"
                            }
                          }
                        ]
                      }
                    },
                    {
                      "Type": "log",
                      "Parameters": { "Info": "查询" }
                    }
                  ]
                }
              }
            ]
          }
        }
      ]
    }
  ],
  //计时器
  "Timers": [
    {
      "Interval": 7200, //计时间隔，单位(秒)
      //7200秒即2小时
      "Actions": [
        {
          "Type": "log",
          "Parameters": { "Info": "计时器：定时在线查询" }
        },
        {
          "Type": "servers",
          "Parameters": {
            "cmd": "list",
            "CallbackActions": [
              {
                "Type": "var",
                "Parameters": {
                  "Name": "result",
                  "Path": [ "text" ]
                }
              },
              {
                "Type": "var",
                "Parameters": {
                  "Name": "ServerName",
                  "ServerConfig": [ "Tag" ]
                }
              },
              {
                "Type": "GroupMessage",
                "Parameters": {
                  "GroupID": "386475891",
                  "Message": "[%ServerName%]在线定时查询\n>%result%"
                }
              }
            ]
          }
        }
      ]
    }
  ],
  //定时任务
  "Tasks": [
    {
      "Mode": "EachHour",
      //"Mode":触发模式
      //EachDay：每日对应时刻触发,即下方的Time可填范围{x∈R|0.0≤x≤24.0},单位(h)
      //EachHour: 每时对应分钟触发,即下方的Time可填范围{x∈R|0.0≤x≤60.0},单位(min)
      "Time": 0,
      "Actions": [
        {
          "Type": "log",
          "Parameters": { "Info": "现在是整点！" }
        }
      ]
    },
    {
      "Mode": "EachHour",
      //"Mode":触发模式
      //EachDay：每日对应时刻触发,即下方的Time可填范围{x∈R|0.0≤x≤24.0},单位(h)
      //EachHour: 每时对应分钟触发,即下方的Time可填范围{x∈R|0.0≤x≤60.0},单位(min)
      "Time": 30,
      "Actions": [
        {
          "Type": "log",
          "Parameters": { "Info": "现在是半点！" }
        }
      ]
    },
    {
      "Mode": "EachDay",
      //"Mode":触发模式
      //EachDay：每日对应时刻触发,即下方的Time可填范围{x∈R|0.0≤x≤24.0},单位(h)
      //EachHour: 每时对应分钟触发,即下方的Time可填范围{x∈R|0.0≤x≤60.0},单位(min)
      "Time": 0,
      "Actions": [
        {
          "Type": "log",
          "Parameters": { "Info": "美好的一天过去了......" }
        }
      ]
    }
  ]
}
