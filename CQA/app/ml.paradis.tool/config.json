{
    "configVersion": 1.0,
    "Servers": [
        {
            "Address": "ws://localhost:29132/mc",
            "Passwd": "passwd",
            "Tag": "测试服务器1",
            "Actions": [
                {
                    "Type": "DoActions",
                    "Filter": {
                        "Path": [
                            "operate"
                        ], //收到的json逐层目录取自{"operate":"onmsg","target":"WangYneos","text":"HelloWorld"}
                        "Operator": "==", //比较符github有详讲
                        "Value": "onmsg" //值
                    },
                    "Parameters": {
                        "Actions": [
                            {
                                "Type": "var",
                                "Parameters": {
                                    "Name": "PlayerName",
                                    "Path": [
                                        "target"
                                    ]
                                }
                            },
                            {
                                "Type": "var",
                                "Parameters": {
                                    "Name": "Message", //变量名称
                                    "Path": [
                                        "text" //层级目录，取自{"operate":"onmsg","target":"WangYneos","text":"HelloWorld"}
                                    ]
                                }
                            },
                            {
                                "Type": "var",
                                "Parameters": {
                                    "Name": "ServerName",
                                    "ServerConfig": [
                                        "Tag"
                                    ]
                                }
                            },
                            {
                                "Type": "ToUnicode",
                                "Parameters": {
                                    "CreateVariant": "ReturnMessage",
                                    "Text": "§e<§6%PlayerName%§e>§b%Message%",
                                    "Filter": true
                                }
                            },
                            {
                                "Type": "log",
                                "Parameters": {
                                    "Debug": "[%ServerName%]玩家%PlayerName%发送了消息:%Message%"
                                }
                            },
                            {
                                "Type": "other",
                                "Parameters": {
                                    "cmd": "tellraw @a {\"rawtext\":[{\"text\":\"§a【%ServerName%】%ReturnMessage%\"}]}"
                                }
                            },
                            {
                                "Type": "GroupMessage",
                                "Parameters": {
                                    "GroupID": 386475891,
                                    "Message": "[%ServerName%:Chat]%PlayerName%>%Message%"
                                }
                            }
                        ]
                    }
                },
                {
                    "Type": "DoActions",
                    "Filter": {
                        "Path": [
                            "operate"
                        ], //收到的json逐层目录取自{"operate":"onjoin","target":"WangYneos","text":"Joined server"}
                        "Operator": "==", //比较符github有详讲
                        "Value": "onjoin" //值
                    },
                    "Parameters": {
                        "Actions": [
                            {
                                "Type": "var",
                                "Parameters": {
                                    "Name": "PlayerName",
                                    "Path": [
                                        "target"
                                    ]
                                }
                            },
                            {
                                "Type": "var",
                                "Parameters": {
                                    "Name": "ServerName",
                                    "ServerConfig": [
                                        "Tag"
                                    ]
                                }
                            },
                            
                            {
                                "Type": "log",
                                "Parameters": {
                                    "Debug": "[%ServerName%]玩家%PlayerName%加入了服务器"
                                }
                            },
                            {
                                "Type": "sender",
                                "Parameters": {
                                    "cmd": "say §e欢迎%PlayerName%§a加入%ServerName%！"
                                }
                            },
                            {
                                "Type": "other",
                                "Parameters": {
                                    "cmd": "say %PlayerName%加入了%ServerName%"
                                }
                            },
                            {
                                "Type": "GroupMessage",
                                "Parameters": {
                                    "GroupID": 386475891,
                                    "Message": "[%ServerName%:Join]%PlayerName%加入了服务器"
                                }
                            }
                        ]
                    }
                },    {
                    "Type": "DoActions",
                    "Filter": {
                        "Path": [
                            "operate"
                        ], //收到的json逐层目录取自{"operate":"onjoin","target":"WangYneos","text":"Joined server"}
                        "Operator": "==", //比较符github有详讲
                        "Value": "onleft" //值
                    },
                    "Parameters": {
                        "Actions": [
                            {
                                "Type": "var",
                                "Parameters": {
                                    "Name": "PlayerName",
                                    "Path": [
                                        "target"
                                    ]
                                }
                            },
                            {
                                "Type": "var",
                                "Parameters": {
                                    "Name": "ServerName",
                                    "ServerConfig": [
                                        "Tag"
                                    ]
                                }
                            },
                            
                            {
                                "Type": "log",
                                "Parameters": {
                                    "Debug": "[%ServerName%]玩家%PlayerName%退出了服务器"
                                }
                            },
                            {
                                "Type": "sender",
                                "Parameters": {
                                    "cmd": "say §e真可惜%PlayerName%§a离开了%ServerName%！"
                                }
                            },
                            {
                                "Type": "other",
                                "Parameters": {
                                    "cmd": "say %PlayerName%离开了%ServerName%"
                                }
                            },
                            {
                                "Type": "GroupMessage",
                                "Parameters": {
                                    "GroupID": 386475891,
                                    "Message": "[%ServerName%:Left]%PlayerName%离开了服务器"
                                }
                            }
                        ]
                    }
                }
            ]
        }
    ],
    "CheckConnectionTime": 60, //检查连接时长，如果服务器掉线了会在检查后自动重连，单位:秒
    "Groups": [
        {
            "ID": 386475891,
            //START--------------
            //快捷转发消息发送到服务器
            //为方便使用没有太多设置(虽然自定义格式已经很多了)
            //如果感觉快捷转发方式不满意也可以"SendToServer": false后在下面的下面用触发器自定义转发(相对麻烦,但是可以实现更多自定义)
            "SendToServer": true,
            "SendToServerRegex": "^(?!/)(.+|\\s+)+",
            //正则筛选，符合条件会转发匹配到的内容
            //---------Examples---------
            //  群聊消息>无条件转发，可以这么填（或者把这行删了）
            //    "SendToServerRegex": "(.*|\\s*)*",
            //---------
            //  群聊消息>不转发以"/"开头的消息，可以这么填(使用了"零宽度负预测先行断言(?!exp)")
            //    "SendToServerRegex": "^(?!/)(.+|\\s+)+",
            //---------
            //  群聊消息>指定以"+"开头的消息，并转发+后面的内容，可以这么填(使用了"零宽度正回顾后发断言(?<=exp)")
            //    "SendToServerRegex": "(?<=^\+)(.+|\\s+)+",
            //---------
            //推荐正则教程(如果你不会改):https://deerchao.cn/tutorials/regex/regex.htm
            //---------
            "SendToServerFormat": {
                //[CQ:xx]自定义转换格式,注意:{n}是参数变量，不是每个都有的
                "CQAt": "§r§l§6@§r§6{0}§a",
                "CQImage": "§r§l§d[图骗]§r§a",
                "CQEmoji": "§r§l§d[emoji]§r§a",
                "CQFace": "§r§l§c[表情]§r§a",
                "CQBface": "§r§l§d[大表情:§r§o§7{0}§r§l§d]§r§a",
                //消息格式
                "Main": "§b【群聊消息】§e<{0}>§a{1}"
            },
            //END--------------
            "Triggers": [
                {
                    "Variants": [ //自定义变量，以便在后面用%xxx%调用
                        {
                            "Name": "Message",
                            "Path": [
                                "Message"
                            ]
                        }
                    ],
                    "Operations": [
                        {
                            "Type": "RegexGet", //操作类型
                            "TargetVariant": "Message", //操作的变量，需要提前在"Variants"定义
                            "CreateVariant": "CMDStr", //创建变量储存操作结果
                            "Pattern": "^/(cmd|执行命令)\\s*(测试服务器1|测试服务器2)?\\s*/?(?<cmdStr>.*)", //正则表达式匹配 基于C#的高端正不懂勿用
                            "GroupName": "cmdStr", //筛选组名，需要上方 Pattern有定义，否则返回空
                            "Filter": true //筛选是否执行 保持执行请填true
                        }
                    ],
                    "Filter": {
                        "Variant": "CMDStr",
                        "Operator": "!=",
                        "Value": ""
                    },
                    "Actions": [
                        {
                            "Target": "doTriggers",
                            "Triggers": [
                                {
                                    "Variants": [ //自定义变量，以便在后面用%xxx%调用
                                        {
                                            "Name": "Message",
                                            "Path": [
                                                "Message"
                                            ]
                                        },
                                        {
                                            "Name": "MemberType",
                                            "Path": [
                                                "MemberInfo",
                                                "MemberType" //消息层级取自下面示例
                                            ]
                                            //群成员类型
                                            //Creator:群主
                                            //Manage:管理员
                                            //Member:成员
                                        }
                                        //获取消息层级目录示例
                                        //{
                                        //  "Message": "23333",
                                        //  "FromQQ": 441870948,
                                        //  "FromQQNick": "g???x???h???",
                                        //  "FromGroup": 386475891,
                                        //  "IsFromAnonymous": false,
                                        //  "Id": 2,
                                        //  "MemberInfo": {
                                        //    "Card": "gxh2004",
                                        //    "Sex": 0,
                                        //    "Age": 16,
                                        //    "Area": "杭州",
                                        //    "JoinGroupDateTime": "2017-05-13T22:38:10+08:00",
                                        //    "LastSpeakDateTime": "2020-04-07T14:00:43+08:00",
                                        //    "Level": "吐槽",
                                        //    "MemberType": "Creator",
                                        //    "ExclusiveTitle": "",
                                        //    "ExclusiveTitleExpirationTime": "1970-01-01T08:00:00+08:00"
                                        //  },
                                        //  "GroupInfo": {
                                        //    "Name": "机器人测试",
                                        //    "CurrentMemberCount": 7,
                                        //    "MaxMemberCount": 200
                                        //  }
                                        //}
                                    ],
                                    "Operations": [
                                        {
                                            "Type": "RegexGet", //操作类型
                                            "TargetVariant": "Message", //操作的变量，需要提前在"Variants"定义
                                            "CreateVariant": "CMDStr", //创建变量储存操作结果
                                            "Pattern": "^/(cmd|执行命令)\\s*(测试服务器1|测试服务器2)?\\s*/?(?<cmdStr>.*)", //正则表达式匹配 基于C#的高端正不懂勿用
                                            "GroupName": "cmdStr", //筛选组名，需要上方 Pattern有定义，否则返回空
                                            "Filter": true //筛选是否执行 保持执行请填true
                                        },
                                        {
                                            "Type": "RegexGet", //操作类型
                                            "TargetVariant": "Message", //操作的变量，需要提前在"Variants"定义
                                            "CreateVariant": "SelectedServer", //创建变量储存操作结果
                                            "Pattern": "^/(cmd|执行命令)\\s*(?<Server>测试服务器1|测试服务器2)", //正则表达式匹配 基于C#的高端正不懂勿用
                                            "GroupName": "Server", //筛选组名，需要上方 Pattern有定义，否则返回空
                                            "Filter": {
                                                "Variant": "CMDStr",
                                                "Operator": "!=",
                                                "Value": ""
                                            } //筛选是否执行 保持执行请填true
                                        }
                                    ],
                                    "Filter": {
                                        "any_of": [ //任一满足返回true
                                            {
                                                "Variant": "MemberType",
                                                "Operator": "==",
                                                "Value": "Creator" //判断是群主
                                            },
                                            {
                                                "Variant": "MemberType",
                                                "Operator": "==",
                                                "Value": "Manage" //判断是管理员
                                            } /*,
                                            {
                                                "Path": [
                                                    "FromQQ"
                                                ],
                                                "Operator": "==",
                                                "Value": "xxxxx"//通过QQ号判断权限
                                            }*/
                                        ]
                                    },
                                    "Actions": [
                                        {
                                            "Target": "servers",
                                            "cmd": "%CMDStr%",
                                            "Filter": {
                                                "any_of": [
                                                    {
                                                        "Variant": "SelectedServer",
                                                        "Operator": "==",
                                                        "Value": ""
                                                    },
                                                    {
                                                        "ServerConfig": [
                                                            "Tag"
                                                        ], //每个server对应配置文件层级目录，取自当前server的配置文件筛选，可以自定义任何标签{ "Address": "ws://localhost:8880/mc", "Passwd": "passwd","Tag": "测试服务器1","Triggers"。。。}
                                                        "Operator": "==",
                                                        "Value": "%SelectedServer%"
                                                    }
                                                ]
                                            }
                                        },
                                        {
                                            "Target": "log",
                                            "Info": "%SelectedServer%执行命令%CMDStr%"
                                        },
                                        {
                                            "Target": "ReturnGroupMessageAtFrom",
                                            "Message": "%SelectedServer%执行命令%CMDStr%"
                                        }
                                    ],
                                    "MismatchedActions": [
                                        {
                                            "Target": "ReturnGroupMessageAtFrom",
                                            "Message": "你莫得权限无法执行%CMDStr%"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                },
                {
                    "Variants": [
                        {
                            "Name": "Message",
                            "Path": [
                                "Message"
                            ]
                        }
                    ],
                    "Operations": [
                        {
                            "Type": "RegexGet", //操作类型
                            "TargetVariant": "Message", //操作的变量，需要提前在"Variants"定义
                            "CreateVariant": "Action", //创建变量储存操作结果
                            "Pattern": "^/(?<Act>query|查询)", //正则表达式匹配 基于C#的高端正不懂勿用
                            "GroupName": "Act", //筛选组名，需要上方 Pattern有定义，否则返回空
                            "Filter": true //筛选是否执行 保持执行请填true
                        },
                        {
                            "Type": "RegexGet", //操作类型
                            "TargetVariant": "Message", //操作的变量，需要提前在"Variants"定义
                            "CreateVariant": "Server", //创建变量储存操作结果
                            "Pattern": "^/(query|查询)\\s*(?<Server>测试服务器1|测试服务器2)", //正则表达式匹配 基于C#的高端正不懂勿用
                            "GroupName": "Server", //筛选组名，需要上方 Pattern有定义，否则返回空
                            "Filter": {
                                "Variant": "Action",
                                "Operator": "!=",
                                "Value": ""
                            }
                        }
                    ],
                    "Filter": {
                        "Variant": "Action",
                        "Operator": "!=",
                        "Value": ""
                    },
                    "Actions": [
                        {
                            "Target": "servers",
                            "cmd": "list",
                            "Filter": {
                                "any_of": [
                                    {
                                        "Variant": "Server",
                                        "Operator": "==",
                                        "Value": ""
                                    },
                                    {
                                        "ServerConfig": [
                                            "Tag"
                                        ], //每个server对应配置文件层级目录，取自当前server的配置文件筛选，可以自定义任何标签{ "Address": "ws://localhost:8880/mc", "Passwd": "passwd","Tag": "测试服务器1","Triggers"。。。}
                                        "Operator": "==",
                                        "Value": "%Server%"
                                    }
                                ]
                            }
                        }
                    ]
                }
            ]
        }
    ],
    //计时器
    "Timers": [
        {
            "Interval": 3600, //计时间隔，单位(秒)
            //3600秒即1小时
            "Actions": [
                {
                    "Target": "log",
                    "Info": "计时器：定时在线查询"
                },
                {
                    "Target": "servers",
                    "cmd": "list",
                    "Filter": true
                }
            ]
        }
    ],
    //定时任务
    "Tasks": [
        {
            "Mode": "EachHour",
            //"Mode":触发模式
            //EachDay：每日对应时刻触发,即下方的Time可填范围{x∈R|0.0≤x≤24.0},单位(h)
            //EachHour: 每时对应分钟触发,即下方的Time可填范围{x∈R|0.0≤x≤60.0},单位(min)
            "Time": 0,
            "Actions": [
                {
                    "Target": "log",
                    "Info": "现在是整点！"
                }
            ]
        },
        {
            "Mode": "EachHour",
            //"Mode":触发模式
            //EachDay：每日对应时刻触发,即下方的Time可填范围{x∈R|0.0≤x≤24.0},单位(h)
            //EachHour: 每时对应分钟触发,即下方的Time可填范围{x∈R|0.0≤x≤60.0},单位(min)
            "Time": 30,
            "Actions": [
                {
                    "Target": "log",
                    "Info": "现在是半点！"
                }
            ]
        },
        {
            "Mode": "EachDay",
            //"Mode":触发模式
            //EachDay：每日对应时刻触发,即下方的Time可填范围{x∈R|0.0≤x≤24.0},单位(h)
            //EachHour: 每时对应分钟触发,即下方的Time可填范围{x∈R|0.0≤x≤60.0},单位(min)
            "Time": 0,
            "Actions": [
                {
                    "Target": "log",
                    "Info": "美好的一天过去了......"
                }
            ]
        }
    ]
}